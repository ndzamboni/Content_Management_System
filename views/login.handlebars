{{> header}}
<div class="container mt-5">
  <div id="login-container">
    <h1>Login</h1>
    <form id="login-form" class="mt-3">
      <div class="form-group">
        <input type="text" id="username" class="form-control" placeholder="Username">
      </div>
      <div class="form-group">
        <input type="password" id="password" class="form-control" placeholder="Password">
      </div>
      <button type="submit" class="btn btn-primary">Login</button>
      <button type="button" class="btn btn-link toggle-form">Don't have an account? Sign Up</button>
    </form>
  </div>
  <div id="signup-container" class="d-none">
    <h1>Sign Up</h1>
    <form id="signup-form" class="mt-3">
      <div class="form-group">
        <input type="text" id="username" class="form-control" placeholder="Username">
      </div>
      <div class="form-group">
        <input type="password" id="password" class="form-control" placeholder="Password">
      </div>
      <button type="submit" class="btn btn-primary">Sign Up</button>
      <button type="button" class="btn btn-link toggle-form">Already have an account? Login</button>
    </form>
  </div>
</div>
{{> footer}}
